<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>ðŸš—</text></svg>">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('assets/styles/app.css') }}">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar">
            <div class="container navbar-content">
                <a href="{{ path('app_home') }}" class="navbar-brand">Car4Cra</a>
                <div class="navbar-links">
                    <a href="{{ path('app_home') }}" class="nav-link">Home</a>
                    <a href="{{ path('app_car_index') }}" class="nav-link">Cars</a>
                    {% if app.user %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('admin_booking_index') }}" class="nav-link">Manage Bookings</a>
                        {% endif %}
                        <a href="{{ path('app_booking_my') }}" class="nav-link">My Bookings</a>
                        <div class="nav-user">
                            <span class="user-email">{{ app.user.email }}</span>
                            <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline">Logout</a>
                        </div>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="nav-link">Login</a>
                        <a href="{{ path('app_register') }}" class="btn btn-primary btn-sm">Sign Up</a>
                    {% endif %}
                </div>
            </div>
        </nav>

        <main class="container main-content">
            {% block body %}{% endblock %}
        </main>

        <footer class="footer">
            <div class="container">
                <p>&copy; {{ 'now'|date('Y') }} Car4Cra. All rights reserved.</p>
            </div>
        </footer>
    </body>
</html>
