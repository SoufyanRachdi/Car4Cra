{% extends 'base.html.twig' %}

{% block title %}Cars - Car4Cra{% endblock %}

{% block body %}
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <h1>Available Cars</h1>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_car_new') }}" class="btn btn-primary">Add New Car</a>
        {% endif %}
    </div>

    <div class="grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 2rem;">
        {% for car in cars %}
            <div class="card">
                {% if car.image %}
                    <img src="{{ car.image }}" class="card-img-top" alt="{{ car.make }} {{ car.model }}">
                {% else %}
                    <div class="card-img-top" style="background-color: #e2e8f0; display: flex; align-items: center; justify-content: center; color: #64748b;">
                        No Image
                    </div>
                {% endif %}
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start" style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 0.5rem;">
                        <h5 class="card-title">{{ car.make }} {{ car.model }}</h5>
                        <span class="badge {{ car.isAvailable ? 'badge-success' : 'badge-warning' }}">
                            {{ car.isAvailable ? 'Available' : 'Booked' }}
                        </span>
                    </div>
                    <p class="card-text">
                        Year: {{ car.year }}<br>
                        Price: <strong>${{ car.pricePerDay }}/day</strong>
                    </p>
                    <div class="d-flex gap-2" style="display: flex; gap: 0.5rem;">
                        <a href="{{ path('app_car_show', {'id': car.id}) }}" class="btn btn-outline btn-sm btn-block">View Details</a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_car_edit', {'id': car.id}) }}" class="btn btn-outline btn-sm">Edit</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-center text-muted">No cars found.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
