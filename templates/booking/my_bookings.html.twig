{% extends 'base.html.twig' %}

{% block title %}My Bookings - Car4Cra{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mb-4" style="margin-bottom: 2rem;">My Bookings</h1>

    <div class="grid" style="display: grid; gap: 1.5rem;">
        {% for booking in bookings %}
            <div class="card">
                <div class="card-body d-flex justify-content-between align-items-center" style="display: flex; justify-content: space-between; align-items: center;">
                    <div>
                        <h5 class="card-title mb-1">{{ booking.car.make }} {{ booking.car.model }}</h5>
                        <p class="text-muted mb-0">
                            {{ booking.startDate|date('M d, Y') }} - {{ booking.endDate|date('M d, Y') }}
                        </p>
                    </div>
                    <div class="text-right" style="text-align: right;">
                        <div class="mb-1" style="font-weight: 700; font-size: 1.25rem; color: var(--primary);">
                            ${{ booking.totalPrice }}
                        </div>
                        <span class="badge badge-success">{{ booking.status|capitalize }}</span>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="card">
                <div class="card-body text-center">
                    <p class="text-muted mb-0">You haven't made any bookings yet.</p>
                    <a href="{{ path('app_car_index') }}" class="btn btn-primary mt-3">Browse Cars</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
